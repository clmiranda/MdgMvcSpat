<!DOCTYPE html>
<html5 lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Asociacion Protectora de Animales Tarija</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="~/archivos/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/archivos/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/js/bootstrap.min.js" integrity="sha384-XEerZL0cuoUbHE4nZReLT7nx9gQrQreJekYhJD9WNWhH8nEW+0c5qq7aIo2Wl30J" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
        <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

        <script src="https://kit.fontawesome.com/0eb65ed4d3.js" crossorigin="anonymous"></script>
        <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet">
        <link href="https://cdn.datatables.net/select/1.3.1/css/select.bootstrap4.min.css" rel="stylesheet">
        @if (User.Identity.IsAuthenticated)
        {
            <link href="~/archivos/css/sidebar.css" rel="stylesheet" />
        }
    </head>
    <style>
        .sticky-footer {
            margin-top:100px;
        }
        button[disabled] {
            cursor: not-allowed;
        }

        .rounded {
            border-radius: .55rem !important
        }

        html {
            position: relative;
            min-height: 100%;
        }
    </style>
    <body id="page-top">
        <nav class="navbar navbar-expand navbar-dark bg-dark sticky-top">
            @if (User.Identity.IsAuthenticated)
            {
                <button class="btn btn-link btn-lg text-white" id="sidebarToggle" href="#">
                    <i class="fas fa-bars"></i>
                </button>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white btn btn-outline-success ml-auto" href="@Url.Action("QuienesSomos","Adopciones", new { area=""})">
                            Qui&eacute;nes Somos
                        </a>
                    </li>
                    <li class="nav-item dropdown ml-sm-0 ml-md-3">
                        <a class="nav-link dropdown-toggle btn btn-outline-primary text-white py-3 border-0" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-lg fa-user-circle fa-fw"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="@Url.Action("EditarPerfil","Perfil",new { area="AdministracionCuentas"})">Ver mi Perfil</a>
                            <a class="dropdown-item" href="@Url.Action("ResetPassword","Perfil",new { area="AdministracionCuentas"})">Resetear Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("LogOut","Cuenta",new { area=""})">Cerrar Sesi&oacute;n</a>
                        </div>
                    </li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white btn btn-outline-success ml-auto" href="@Url.Action("QuienesSomos","Adopciones", new { area=""})">
                            Qui&eacute;nes Somos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white btn btn-outline-success ml-3" href="@Url.Action("Login","Cuenta", new { area=""})">
                            Iniciar Sesi&oacute;n
                        </a>
                    </li>
                </ul>
            }
        </nav>
        <div id="wrapper">
            @if (User.Identity.IsAuthenticated)
            {
            <ul class="sidebar navbar-nav">
                <li class="nav-item mt-3">
                    <a class="nav-link btn btn-outline-primary text-white py-3 border-0" href="@Url.Action("Inicio","Adopciones",new { area=""})">
                        <i class="fas fa-home fa-lg"></i>
                        <span>Inicio</span>
                    </a>
                </li>
                @if (User.IsInRole("Administrador"))
                {
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary text-white py-3 border-0" href="@Url.Action("Dashboard","Inicio",new { area=""})">
                            <i class="far fa-clipboard fa-lg"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary text-white py-3 border-0" href="@Url.Action("Lista","Seguimiento",new { area="AdministracionSeguimientos"})">
                            <i class="fas fa-search-location fa-lg"></i>
                            <span>Admin. Seguimientos</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary text-white py-3 border-0" href="@Url.Action("Lista","Adopcion",new { area="AdministracionAdopciones"})">
                            <i class="fas fa-pen-alt fa-lg"></i>
                            <span>Admin. Adopciones</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary text-white py-3 border-0" href="@Url.Action("Lista","Cuenta",new { area="AdministracionCuentas"})">
                            <i class="fas fa-user-circle fa-lg"></i>
                            <span>Administrar Usuarios</span>
                        </a>
                    </li>
                }
                @if (User.IsInRole("Voluntario"))
                {
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-primary text-white py-3 border-0" href="@Url.Action("Lista","ReporteVoluntario",new { area="AdministracionSeguimientos"})">
                            <i class="fas fa-thumbtack fa-lg"></i>
                            <span>Seguimientos Asignados</span>
                        </a>
                    </li>
                }
                @if (User.IsInRole("Administrador"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle btn btn-outline-primary text-white py-3 border-0" id="mascotasDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-paw fa-lg"></i>
                            <span>Mascotas</span>
                        </a>
                        <div class="dropdown-menu m-0" aria-labelledby="mascotasDropdown">
                            <a class="dropdown-item px-2" href="@Url.Action("Lista","Denuncia",new { area="AdministracionMascotas"})">Administrar Denuncias</a>
                            <a class="dropdown-item px-2" href="@Url.Action("Lista","Mascota",new { area="AdministracionMascotas"})">Administrar Mascotas</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle btn btn-outline-primary text-white py-3 border-0" id="reportesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-chart-area fa-lg"></i>
                            <span>Reportes</span>
                        </a>
                        <div class="dropdown-menu m-0" aria-labelledby="reportesDropdown">
                            <a class="dropdown-item px-2" href="@Url.Action("Adopciones","Graficas",new { area="AdministracionDatos"})">Reportes Adopciones</a>
                            <a class="dropdown-item px-2" href="@Url.Action("Mascotas","Graficas",new { area="AdministracionDatos"})">Reportes Mascotas</a>
                            <a class="dropdown-item px-2" href="@Url.Action("ReporteSeguimientos","Graficas",new { area="AdministracionDatos"})">Reportes Seguimientos</a>
                        </div>
                    </li>
                }
            </ul>
            }
        <div id="content-wrapper">
            <main role="main">
                @RenderBody()
                @RenderSection("Scripts", required: false)
            </main>
                <div class="mx-auto">
                    <footer class="sticky-footer">
                        <div class="container my-5">
                            <hr class="my-3">
                            <div class="copyright text-center">
                                <span class="lead">Copyright © S.P.A.T. 2021</span>
                            </div>
                        </div>
                    </footer>
                </div>
        </div>
        </div>
        <!--Modal Popup-->
        <div class="modal fade" id="form-modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                    </div>
                </div>
            </div>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
            <script src="~/archivos/js/jquery.easing.min.js"></script>
            <script src="~/archivos/js/sidebar.min.js"></script>
        }
        <script src="~/archivos/js/crud.js"></script>
    </body>
</html5>
