<!DOCTYPE html>
<html5 lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Asociacion Protectora de Animales Tarija</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="~/archivos/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/archivos/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <link href="~/archivos/css/bootstrap.min.css" rel="stylesheet" />

        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/js/bootstrap.min.js" integrity="sha384-XEerZL0cuoUbHE4nZReLT7nx9gQrQreJekYhJD9WNWhH8nEW+0c5qq7aIo2Wl30J" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
        <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

        <script src="https://kit.fontawesome.com/0eb65ed4d3.js" crossorigin="anonymous"></script>
        <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet">
        <link href="https://cdn.datatables.net/select/1.3.1/css/select.bootstrap4.min.css" rel="stylesheet">
        @if (User.Identity.IsAuthenticated)
        {
            <link href="~/archivos/css/sidebar.css" rel="stylesheet" />
        }
        <link href="~/archivos/css/estilos.css" rel="stylesheet">
    </head>
    <style>
        html {
            position: relative;
            min-height: 100%;
        }
    </style>
    <body id="page-top">
        <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
            @if (User.Identity.IsAuthenticated)
            {
                <button class="btn btn-link btn-lg text-white" id="sidebarToggle" href="#">
                    <i class="fas fa-bars"></i>
                </button>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-lg fa-user-circle fa-fw"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="@Url.Action("EditarPerfil","Perfil",new { area="AdministracionCuentas"})">Ver mi Perfil</a>
                            <a class="dropdown-item" href="@Url.Action("ResetPassword","Perfil",new { area="AdministracionCuentas"})">Resetear Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("LogOut","Cuenta",new { area=""})">Cerrar Sesi&oacute;n</a>
                        </div>
                    </li>
                </ul>
            }
            else
            {
                <a class="btn btn-primary text-white ml-auto" href="@Url.Action("QuienesSomos","Adopciones", new { area=""})">
                    Qui&eacute;nes Somos
                </a>
                <a class="btn btn-primary text-white ml-3" href="@Url.Action("LeyMunicipal","Adopciones", new { area=""})">
                    Ley Municipal N° 217
                </a>
                <a class="btn btn-primary text-white ml-3" href="@Url.Action("Login","Cuenta", new { area=""})">
                    Iniciar Sesi&oacute;n
                </a>
            }
        </nav>
        <div id="wrapper">
            @if (User.Identity.IsAuthenticated)
            {
            <ul class="sidebar navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="mascotasDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-paw"></i>
                        <span>Mascotas</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="mascotasDropdown">
                        <a class="dropdown-item" href="@Url.Action("Index","Denuncia",new { area="AdministracionMascotas"})">Administrar Denuncias</a>
                        <a class="dropdown-item" href="@Url.Action("Lista","Mascota",new { area="AdministracionMascotas"})">Administrar Mascotas</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="accountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-circle"></i>
                        <span>Cuentas</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="accountDropdown">
                        <a class="dropdown-item" href="@Url.Action("Lista","Cuenta",new { area="AdministracionCuentas"})">Administrar Usuarios</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="adopcionDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-file-signature"></i>
                        <span>Adopciones</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="adopcionDropdown">
                        <a class="dropdown-item" href="@Url.Action("Lista","Adopcion",new { area="AdministracionAdopciones"})">Administrar Adopciones</a>
                        <a class="dropdown-item" href="@Url.Action("Lista","Seguimiento",new { area="AdministracionSeguimientos"})">Administrar Seguimientos</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="reportesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fal fa-file-chart-line"></i>
                        <span>Reportes</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="reportesDropdown">
                        <a class="dropdown-item" href="@Url.Action("Adopciones","Graficas",new { area="AdministracionReportes"})">Reportes Adopciones</a>
                        <a class="dropdown-item" href="@Url.Action("Mascotas","Graficas",new { area="AdministracionReportes"})">Reportes Mascotas</a>
                        <a class="dropdown-item" href="@Url.Action("ReporteSeguimientos","Graficas",new { area="AdministracionReportes"})">Reportes Seguimientos</a>
                    </div>
                </li>
            </ul>
            }
            <div id="content-wrapper">
                <main role="main">
                    @RenderBody()
                    @RenderSection("Scripts", required: false)
                </main>
                <div class="modal fade" id="form-modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title"></h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="sticky-footer">
                    <div class="container my-5">
                        <hr class="my-3">
                        <div class="copyright text-center">
                            <span class="lead">Copyright © S.P.A.T. 2021</span>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
            <script src="~/archivos/js/jquery.easing.min.js"></script>
            <script src="~/archivos/js/sidebar.min.js"></script>
        }
        <script src="~/archivos/js/crud.js"></script>
    </body>
</html5>
