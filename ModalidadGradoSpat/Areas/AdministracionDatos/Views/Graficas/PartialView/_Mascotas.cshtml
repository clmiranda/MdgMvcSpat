    <option value="9 meses" selected>&Uacute;ltimos 9 meses</option>
    <option value="12 meses">&Uacute;ltimos 12 meses</option>
}
else @if (ViewData["filter"].Equals("12 meses"))
{
<option value="3 meses">&Uacute;ltimos 3 meses</option>
<option value="6 meses">&Uacute;ltimos 6 meses</option>
<option value="9 meses">&Uacute;ltimos 9 meses</option>
<option value="12 meses" selected>&Uacute;ltimos 12 meses</option>
