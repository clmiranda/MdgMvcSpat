@model List<DataGraficaDto>
@{
    var XLabels = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Nombre).ToList());
    var YValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Cantidad.ToString()).ToList());
}
<form method="post" asp-action="ReturnVistaMascotas">
    <select id="selectMascotas" class="form-control" name="filtrado">
        @if (ViewData["filter"].Equals("3 meses"))
        {
            <option value="3 meses" selected>&Uacute;ltimos 3 meses</option>
            <option value="6 meses">&Uacute;ltimos 6 meses</option>
            <option value="9 meses">&Uacute;ltimos 9 meses</option>
            <option value="12 meses">&Uacute;ltimos 12 meses</option>
        }
        else @if (ViewData["filter"].Equals("6 meses"))
   {
    <option value="3 meses">&Uacute;ltimos 3 meses</option>
    <option value="6 meses" selected>&Uacute;ltimos 6 meses</option>
    <option value="9 meses">&Uacute;ltimos 9 meses</option>
    <option value="12 meses">&Uacute;ltimos 12 meses</option>
}
else @if (ViewData["filter"].Equals("9 meses"))
   {
    <option value="3 meses">&Uacute;ltimos 3 meses</option>
    <option value="6 meses">&Uacute;ltimos 6 meses</option>
    <option value="9 meses" selected>&Uacute;ltimos 9 meses</option>
    <option value="12 meses">&Uacute;ltimos 12 meses</option>
}
else @if (ViewData["filter"].Equals("12 meses"))
{
<option value="3 meses">&Uacute;ltimos 3 meses</option>
<option value="6 meses">&Uacute;ltimos 6 meses</option>
<option value="9 meses">&Uacute;ltimos 9 meses</option>
<option value="12 meses" selected>&Uacute;ltimos 12 meses</option>
}
</select>
</form>
<div class="row mt-5">
    <div class="col-12">
        <div class="shadow-lg border p-sm-1 p-md-3 bg-white rounded">
            <canvas id="chartMascotas" style="width:100%;"></canvas>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="text/javascript">
        $('#selectMascotas').on('change', function () {
            $.ajax({
                type: "POST",
                url: this.form.action,
                data: new FormData(this.form),
                contentType: false,
                processData: false,
                success: function (res) {
                    $('#viewMascotas').html(res);
                }
            })
                .fail(function (jqXHR, textStatus, errorThrown) {
                    window.location.href = "/Error/" + jqXHR.status;
                })
    });
    $(function () {
        var chartName = "chartMascotas";
        var ctx = document.getElementById(chartName).getContext('2d');
        var speedData = {
            labels: @Html.Raw(XLabels),
            datasets: [{
                label: "Registros por Mes",
                data: @Html.Raw(YValues),
                borderWidth: 5,
                fill: false,
                borderColor: 'rgb(75, 192, 192)'
            }]
        };

        var lineChart = new Chart(ctx, {
            type: 'line',
            data: speedData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Mascotas Registradas por mes.'
                    }
                }
            }
        });
    });
</script>
