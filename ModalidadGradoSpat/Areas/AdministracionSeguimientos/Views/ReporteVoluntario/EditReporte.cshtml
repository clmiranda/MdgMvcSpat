@model ReporteSeguimiento
@{
    Layout = null;
}
<style>
    .file {
        visibility: hidden;
        position: absolute;
    }
</style>
@await Html.PartialAsync("~/Views/RenderSweetAlert.cshtml")

<form asp-action="SendReporte" method="post" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <input asp-for="Id" type="hidden" value="@Model.Id" />
    <input asp-for="SeguimientoId" type="hidden" value="@Model.SeguimientoId" />
    <input asp-for="Estado" type="hidden" value="@Model.Estado" />
    <div class="row">
        <div class="form-group col">
            <label for="idEstadoMascota">Descripci&oacute;n del estado de la mascota: </label>
            <textarea type="text" asp-for="EstadoMascota" class="form-control" id="idEstadoMascota"></textarea>
            @Html.ValidationMessageFor(x => x.EstadoMascota, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-12">
            <label for="inputDesc">Descripci&oacute;n general de reporte: </label>
            <textarea asp-for="Observaciones" class="form-control" id="inputDesc"></textarea>
            @Html.ValidationMessageFor(x => x.Observaciones, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-12 col-md-6">
            <label for="imgReporte">Seleccione la Imagen de la Mascota: </label>
            <input @*asp-for="Foto"*@ name="Foto" accept="image/*" class="file" type='file' id="imgReporte" />
            <div class="input-group my-3">
                <input id="inputFile" type="text" class="form-control" disabled placeholder="Cargar Imagen">
                <div class="input-group-append">
                    <button type="button" class="browse btn btn-primary">Navegar...</button>
                </div>
            </div>
            <div class="mx-auto">
                <img src="https://placehold.it/80x80" class="img-thumbnail" id="prevImg">
            </div>
            @*@Html.ValidationMessageFor(x => x.Foto, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>

    <script type="text/javascript" language=javascript>
        $.validator.unobtrusive.parse(document);

        $(document).on("click", ".browse", function () {
            var file = $(this).parents().find(".file");
            file.trigger("click");
        });
        $('input[type="file"]').change(function (e) {
            var fileName = e.target.files[0].name;
            $("#inputFile").val(fileName);

            var reader = new FileReader();
            reader.onload = function (e) {
                // get loaded data and render thumbnail.
                document.getElementById("prevImg").src = e.target.result;
            };
            // read the image file as a data URL.
            reader.readAsDataURL(this.files[0]);
        });
    </script>
