@model SolicitudAdopcion
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid py-3">
    <h3>
        Vista Detalle Seguimiento Asignado
    </h3>
    <p class="mb-5">
        En esta vista se detalla la informaci&oacute;n del
        seguimiento al cual has sido asignado.
    </p>
    @if (Model == null)
    {
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="shadow-lg border p-5 bg-white rounded text-center">
                    No se puede mostrar los datos, id de seguimiento incorrecto.
                </div>
            </div>
        </div>
    }
    else
    {
        if (Model.Mascota != null)
        {
            <div class="row text-justify">
                <div class="col-lg-6">
                    <div class="shadow-lg border p-5 bg-white rounded">
                        <h4 class="pb-3 text-primary">Informaci&oacute;n del Adoptante</h4>
                        <p class="card-text">
                            <strong>Nombre Completo del Adoptante: </strong>@Model.NombreCompleto<br /><br />
                            <strong>Domicilio: </strong>@Model.Domicilio<br /><br />
                            <strong>N&uacute;mero de Tel&eacute;fono/Celular: </strong>@Model.Telefono<br /><br />
                            <strong>Fecha de Solicitud de Adopci&oacute;n: </strong>@Model.FechaSolicitudAdopcion.ToShortDateString()
                        </p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shadow-lg border p-5 bg-white rounded">
                        <h4 class="pb-3 text-primary">Informaci&oacute;n de la Mascota</h4>
                        <p class="card-text">
                            <strong>Nombre de la Mascota: </strong>@Model.Mascota.Nombre<br /><br />
                            @if (Model.Mascota.Esterilizado)
                            {
                                <strong>Esterilizada: </strong>@:La Mascota se encuentra esterilizada.<br /><br />
                            }
                            else
                            {
                                <strong>Esterilizada: </strong>@:La Mascota no se encuentra esterilizada.<br /><br />
                            }
                            <strong>Especie: </strong>@Model.Mascota.Especie<br /><br />
                            <strong>Sexo de la Mascota: </strong>@Model.Mascota.Sexo<br /><br />
                            <strong>Edad: </strong>@Model.Mascota.Edad<br /><br />
                            <strong>Tama&ntilde;o de la Mascota: </strong>@Model.Mascota.Tamano<br /><br />
                            <strong>Caracteristicas de la Mascota: </strong>@Model.Mascota.Caracteristicas<br /><br />
                            <strong>Rasgos Particulares: </strong>@Model.Mascota.RasgosParticulares
                        </p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <div class="shadow-lg border p-5 bg-white rounded text-center">
                        La adopci&oacute;n a la que pertenece este seguimiento ha sido cancelada!
                    </div>
                </div>
            </div>
        }
    }
</div>
