@model ContratoAdopcion
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/archivos/css/datepicker.css" rel="stylesheet" />
<script src="~/archivos/js/datepicker.js"></script>
<script src="~/archivos/js/datepicker.es-ES.js"></script>
<style>
    .rounded {
        border-radius: .75rem !important
    }

    button[disabled] {
        cursor: not-allowed;
    }
</style>
@if (Model.Estado.Equals("Pendiente"))
{
    <p class="justify-content-center mb-3">
        Esta vista se centra en la aceptacion o rechazo de una solicitud de adopcion,
        tambien para establecer la fecha de la adopcion en caso de que esta se apruebe.
    </p>
    <div class="col-sm-12 col-lg-10 mx-auto">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-contrato" data-toggle="tab" href="#tab-contrato" role="tab" aria-controls="tab-crud-mascota" aria-selected="false">Acciones</a>
                <a class="nav-item nav-link" id="nav-informe" data-toggle="tab" href="#tab-informe" role="tab" aria-controls="tab-view-mascota" aria-selected="true">Detalle Contrato Adopci&oacute;n</a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="tab-contrato" role="tabpanel" aria-labelledby="nav-contrato">
                <div id="body-content-action">
                    @await Html.PartialAsync("PartialView/_AdministrarContrato", Model)
                </div>
            </div>
            <div class="tab-pane fade" id="tab-informe" role="tabpanel" aria-labelledby="nav-informe">
                <div id="body-content-view">
                    @await Html.PartialAsync("PartialView/_InformeContrato", Model)
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div id="body-content-view">
        @await Html.PartialAsync("PartialView/_InformeContrato", Model)
    </div>
}