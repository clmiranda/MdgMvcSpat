                    if ($('#idNombre').val() != "" || $('#idCheckSexo').val() != "" || $('#idTamano').val() != "" || $('#idCheckEsterilizado').val() != "" || $('#idEdad').val() != "")
                        $("#idButtonSend").removeAttr('disabled');
                });
            </script>*@
